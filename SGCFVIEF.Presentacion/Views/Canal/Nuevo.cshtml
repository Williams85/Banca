@{
    ViewBag.Title = "Registrar de Canales";
}

<div id="content-header">
    <h1>Registrar Canal</h1>
</div>

<div class="container-fluid">
    <div class="row-fluid">
        <div class="span6 clear centrar6">
            <div class="widget-box">
                <div class="widget-title">
                    <span class="icon">
                        <i class="icon-align-justify"></i>
                    </span>
                    <h5>Información de Canal</h5>
                </div>
                <div class="widget-content nopadding">
                    <form class="form-horizontal formulario" method="post" action="#" name="basic_validate" id="basic_validate" novalidate="novalidate">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="IdCanal">Código:</label>
                                @Html.TextBox("Cod_Canal", null, new { @class = "form-control", @readonly = "true" })
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="NomCanal">Canal:</label>
                                @Html.TextBox("Canal", null, new { @class = "form-control", @autocomplete = "off", @maxlength = "150" })
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="RucCanal">R.U.C.:</label>
                                @Html.TextBox("RUC", null, new { @class = "form-control", @autocomplete = "off", @maxlength = "11" })
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="RazonSocial">Razon Social:</label>
                                @Html.TextBox("Razon_Social", null, new { @class = "form-control", @autocomplete = "off", @maxlength = "150" })
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="Direccion">Dirección:</label>
                                @Html.TextBox("Direccion", null, new { @class = "form-control", @autocomplete = "off", @maxlength = "250" })
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="Region_Cod_Region">Región:</label>
                                @Html.DropDownList("Region_Cod_Region", new SelectList(ViewBag.ListaRegiones, "Cod_Region", "Descripcion"), null, new { @class = "form-control chosen-select" })
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="Provincia_Cod_Provincia">Provincia:</label>
                                @Html.DropDownList("Provincia_Cod_Provincia", new SelectList(ViewBag.ListaProvincias, "Cod_Provincia", "Descripcion"), null, new { @class = "form-control chosen-select" })
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="Distrito_Cod_Distrito">Distrito:</label>
                                @Html.DropDownList("Distrito_Cod_Distrito", new SelectList(ViewBag.ListaDistritos, "Cod_Distrito", "Descripcion"), null, new { @class = "form-control chosen-select" })
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="Teléfono1">Teléfono 1:</label>
                                @Html.TextBox("Telefono1", null, new { @class = "form-control", @autocomplete = "off", @maxlength = "15" })
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="Teléfono2">Teléfono 2:</label>
                                @Html.TextBox("Telefono2", null, new { @class = "form-control", @autocomplete = "off", @maxlength = "15" })
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="Celular">Celular:</label>
                                @Html.TextBox("Celular", null, new { @class = "form-control", @autocomplete = "off", @maxlength = "15" })
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="RepresentanteLegal">Representante Legal:</label>
                                @Html.TextBox("Representante_Legal", null, new { @class = "form-control", @autocomplete = "off", @maxlength = "150" })
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="RepresentanteLegal">Email:</label>
                                @Html.TextBox("Email", null, new { @class = "form-control", @autocomplete = "off", @maxlength = "150", type = "email" })
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="FechaInicio">Fecha Inicio:</label>
                                @Html.TextBox("Fecha_Inicio", null, new { @class = "form-control", @autocomplete = "off", @maxlength = "10" })
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="FechaCese">Fecha Cese:</label>
                                @Html.TextBox("Fecha_Cese", null, new { @class = "form-control", @autocomplete = "off", @maxlength = "10" })
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="Estado">Estado:</label>
                                @Html.DropDownList("Estado", new List<SelectListItem> { new SelectListItem { Text = "Activo", Value = "A" }, new SelectListItem { Text = "Inactivo", Value = "I" } }, null, new { @class = "form-control chosen-select" })
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="alert alert-danger text-left" id="Message-Error">
                                <strong></strong>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group">
                                <button type="button" class="btn btn-danger" id="btn-registrar">Grabar</button>
                                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-warning" })
                            </div>
                        </div>
                        <div class="clear"></div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="MensajeGrabar">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Mensaje</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Se creará un canal.¿Desea Continuar?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btn-grabar">Si</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="ResultadoGrabacion">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Mensaje</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>El código del canal es: <span id="Id"></span> </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="ResultadoGrabacionErr">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Mensaje</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p id="Mensaje"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/script-layaout")
@Scripts.Render("~/bundles/mantenimiento-canales")
<script>
    $(function () {

        $("#Fecha_Inicio").datepicker();
        $("#Fecha_Cese").datepicker();

    });
</script>
