@{
    ViewBag.Title = "Index";
}

<div id="content-header">
    <h1>Reporte de Solicitudes Aprobadas</h1>
</div>

<div class="container-fluid">
    <div class="row-fluid">
        <div class="span8 clear centrar8">
            <div class="widget-box">
                <div class="widget-title">
                    <span class="icon">
                        <i class="icon-align-justify"></i>
                    </span>
                    <h5>Filtro de Selección</h5>
                </div>
                <div class="widget-content nopadding">
                    <form class="form-horizontal formulario" method="post" action="#" name="basic_validate" id="basic_validate" novalidate="novalidate">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="FechaInicio">Desde:</label>
                                    <input type="text" class="form-control" id="FechaInicio" readonly
                                           placeholder="Fecha Desde">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="FechaFin">Hasta:</label>
                                    <input type="text" class="form-control" id="FechaFin" readonly
                                           placeholder="Fecha Hasta">
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="TipoComision">Tipo Comisión:</label>
                                    <select class="form-control  chosen-select" id="TipoComision">
                                        <option value="" selected>Todos</option>
                                        <option value="1">FFVV Externo</option>
                                        <option value="2">FFVV Interno</option>
                                        <option value="3">Otros</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="Cod_Producto">Producto:</label>
                                    @Html.DropDownList("Cod_Producto", new SelectList(ViewBag.ListaProductos, "Cod_Producto", "Producto"), "Todos", new { @class = "form-control chosen-select" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="Cod_Vendedor">Vendedor:</label>
                                    @Html.DropDownList("Cod_Vendedor", new SelectList(ViewBag.ListaVendedores, "Cod_Vendedor", "NombreCompleto"), "Todos", new { @class = "form-control chosen-select" })
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="Cod_Canal">Canal:</label>
                                    @Html.DropDownList("Cod_Canal", new SelectList(ViewBag.ListaCanales, "Cod_Canal", "Canal"), "Todos", new { @class = "form-control chosen-select" })

                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="CodigoReporte">Código Reporte:</label>
                                    <input type="text" class="form-control" id="CodigoReporte"                                           placeholder="Código Reporte">
                                </div>
                            </div>
                        </div>

                        <div class="row">

                            <div class="col-md-6">

                            </div>
                            <div class="col-md-6 text-center botones">
                                <div class="form-group">
                                    <button type="button" class="btn btn-primary" id="IdNuevo">Nuevo</button>
                                    <button type="button" class="btn btn-info" id="IdBuscar">Buscar</button>
                                    <button type="button" class="btn btn-success" id="IdExportar">Exportar</button>
                                    <button type="button" class="btn btn-warning" id="btn-cancelar">Cancelar</button>
                                </div>
                            </div>
                        </div>
                        <div class="clear"></div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

<div id="Resultados">

</div>
<div class="modal fade" id="ResultadoGrabacion">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Mensaje</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>El código de Reporte es: <span id="Id"></span> </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="ResultadoGrabacionErr">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Mensaje</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p id="Mensaje"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/bundles/script-layaout")
@Scripts.Render("~/bundles/reporte-solicitudes-aprobadas")


<script>
    $(function () {

        $("#FechaInicio").datepicker();
        $("#FechaFin").datepicker();

    });
</script>